# ===========================================
# Weather Viewer Application Configuration
# ===========================================
# Copy this file to application.yml and fill in your values

# Database Configuration
db:
  driver: org.postgresql.Driver
  url: # Example: jdbc:postgresql://localhost:5432/weather_db
  username: # Your PostgreSQL username
  password: # Your PostgreSQL password

# Hibernate Configuration
hibernate:
  dialect: org.hibernate.dialect.PostgreSQLDialect
  show_sql: true
  hbm2ddl.auto: validate  # Options: validate, update, create, create-drop

# Connection Pool
connectionPool:
  size: # Example: 10

# Flyway Migration Settings
flyway:
  enabled: true
  baseline-on-migrate: true
  locations: classpath:db/migration

# Weather API Configuration
weather-api:
  key: # Your OpenWeatherMap API key
  base-url: http://api.weatherapi.com/v1


